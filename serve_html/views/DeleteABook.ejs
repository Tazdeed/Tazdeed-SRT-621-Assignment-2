<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link rel="stylesheet" href="/style">
</head>
<body>
    <div id="title">
        <h1>To delete a book, click on the red X button.</h1>
    </div>
    <br>
    <br>
    <div id="book_list">
        <table>
            <% let i = 0 %>
            <% data.forEach (data => {%>
            <form action="<%= `new_books/${data.book}/delete?_method=DELETE` %>" method="POST">
                <% i++ %>
                <tr>
                    <td><button type= "submit" onclick="return confirm('Are you sure you want to delete this record?')">X</button>
                    <label><%= data.book%></label></td>
                </tr>
            </form>
            <% }); %>
        </table>
    </div>
    <div class="nav">
        <ul>
            <a href="/home">List of Books</a> <span>|</span>
            <a href="/addNewBook">Add Book</a> <span>|</span>
            <a href="/DeleteABook">Delete A Book</a>
        </ul>
    </div>
</body>
</html>